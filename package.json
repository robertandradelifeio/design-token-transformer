  "bugs": {
    "url": "https://github.com/lukasoppermann/design-token-transformer/issues"
  },
  "homepage": "https://github.com/lukasoppermann/design-token-transformer#readme",
  "dependencies": {
    "style-dictionary": "^3.7.1"
  }
}
