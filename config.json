{
  "source": [
    "tokens/color/*.json",
    "tokens/content/*.json"
  ],
  "platforms": {
    "scss": {
      "buildPath": "build/scss/",
      "transformGroup": "custom/scss",
      "files": [
        {
          "format": "scss/variables",
          "destination": "global/_color.scss",
          "filter": {
            "attributes": {
              "category": "color"
            }
          },
          "options": {
            "showFileHeader": true
          }
        },
        {
          "format": "scss/variables",
          "destination": "global/_font.scss",
          "filter": {
            "attributes": {
              "category": "typography"
            }
          }
        },
        {
          "format": "scss/variables",
          "destination": "global/_size.scss",
          "filter": {
            "attributes": {
              "category": "size"
            }
          }
        }
      ]
    },
    "scss-font-face": {
      "transforms": ["font/face"],
      "buildPath": "build/scss/",
      "files": [
        {
          "destination": "_fonts-custom.scss",
          "format": "custom/font-face",
          "filter": {
            "attributes": {
              "category": "asset",
              "type": "custom-fontStyle"
            }
          },
          "options": {
            "fontPathPrefix": "#{$font-path}/",
            "fileHeader": "customHeader"
          }
        }
      ]
    }
  }
}
